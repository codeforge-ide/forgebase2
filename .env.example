# Server Configuration
SERVER__HOST=0.0.0.0
SERVER__PORT=8080
SERVER__ENVIRONMENT=development
SERVER__CORS_ORIGINS=*
SERVER__MAX_BODY_SIZE=10485760

# Database Configuration
DATABASE__URL=postgresql://postgres:password@localhost:5432/forgebase
DATABASE__MAX_CONNECTIONS=20
DATABASE__MIN_CONNECTIONS=5
DATABASE__ACQUIRE_TIMEOUT=30
DATABASE__IDLE_TIMEOUT=600

# Authentication Configuration
AUTH__JWT_SECRET=change-this-to-a-secure-random-string-in-production
AUTH__JWT_EXPIRATION=3600
AUTH__REFRESH_TOKEN_EXPIRATION=2592000
AUTH__PASSWORD_MIN_LENGTH=8
AUTH__ENABLE_EMAIL_VERIFICATION=true
AUTH__ENABLE_MAGIC_LINKS=true

# OAuth Providers (Optional)
# AUTH__OAUTH_PROVIDERS__GOOGLE__CLIENT_ID=your-client-id
# AUTH__OAUTH_PROVIDERS__GOOGLE__CLIENT_SECRET=your-client-secret
# AUTH__OAUTH_PROVIDERS__GOOGLE__REDIRECT_URI=http://localhost:8080/auth/oauth/google/callback
# AUTH__OAUTH_PROVIDERS__GOOGLE__SCOPES=openid,email,profile

# AUTH__OAUTH_PROVIDERS__GITHUB__CLIENT_ID=your-client-id
# AUTH__OAUTH_PROVIDERS__GITHUB__CLIENT_SECRET=your-client-secret
# AUTH__OAUTH_PROVIDERS__GITHUB__REDIRECT_URI=http://localhost:8080/auth/oauth/github/callback
# AUTH__OAUTH_PROVIDERS__GITHUB__SCOPES=user:email

# Storage Configuration
STORAGE__BACKEND=local
STORAGE__BUCKET=forgebase-storage
STORAGE__REGION=us-east-1
STORAGE__MAX_FILE_SIZE=104857600
# STORAGE__ENDPOINT=http://localhost:9000
# STORAGE__ACCESS_KEY=minioadmin
# STORAGE__SECRET_KEY=minioadmin

# Email Configuration
EMAIL__SMTP_HOST=smtp.gmail.com
EMAIL__SMTP_PORT=587
EMAIL__SMTP_USERNAME=your-email@gmail.com
EMAIL__SMTP_PASSWORD=your-app-password
EMAIL__FROM_EMAIL=noreply@forgebase.dev
EMAIL__FROM_NAME=ForgeBase

# Sites Configuration
SITES__STORAGE_PATH=./data/sites
SITES__MAX_DEPLOYMENT_SIZE=524288000
SITES__CUSTOM_DOMAINS_ENABLED=true
SITES__SSL_ENABLED=true

# Logging
RUST_LOG=info,forgebase=debug

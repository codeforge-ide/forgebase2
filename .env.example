# Server Configuration
SERVER__HOST=0.0.0.0
SERVER__PORT=8080
SERVER__ENVIRONMENT=development
SERVER__CORS_ORIGINS=http://localhost:3000,http://localhost:5173
SERVER__MAX_BODY_SIZE=10485760

# Database Configuration
DATABASE__URL=postgresql://forgebase:forgebase@localhost:5432/forgebase
DATABASE__MAX_CONNECTIONS=100
DATABASE__MIN_CONNECTIONS=10
DATABASE__ACQUIRE_TIMEOUT=30
DATABASE__IDLE_TIMEOUT=600

# Authentication Configuration
AUTH__JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
AUTH__JWT_EXPIRATION=3600
AUTH__REFRESH_TOKEN_EXPIRATION=2592000
AUTH__PASSWORD_MIN_LENGTH=8
AUTH__ENABLE_EMAIL_VERIFICATION=true
AUTH__ENABLE_MAGIC_LINKS=true

# Email Configuration
EMAIL__SMTP_HOST=smtp.gmail.com
EMAIL__SMTP_PORT=587
EMAIL__SMTP_USERNAME=your-email@gmail.com
EMAIL__SMTP_PASSWORD=your-app-password
EMAIL__FROM_EMAIL=noreply@forgebase.dev
EMAIL__FROM_NAME=ForgeBase

# Storage Configuration
STORAGE__BACKEND=local
STORAGE__BUCKET=forgebase-bucket
STORAGE__MAX_FILE_SIZE=524288000

# Sites/Deployment Configuration
SITES__STORAGE_PATH=./data/sites
SITES__MAX_DEPLOYMENT_SIZE=524288000
SITES__CUSTOM_DOMAINS_ENABLED=true
SITES__SSL_ENABLED=true

# Logging
RUST_LOG=forgebase=info,tower_http=debug
